<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> adminHeader}}
    <div class="modal-dialog modal-lg" role="document" style="margin-top: 4%; margin-left: 15%">
        <div class="modal-content py-5" style="padding-left: 12%;">
            <div class="modal-header">
                <h2 class="modal-title">Create a Guest</h2>
            </div>
            <div class="row" style="margin-bottom: 22px;">
                <div class="col-md-3 border-right" style="padding-right: 20px;">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px" src="/images/user.png">
                    </div>
                </div>
                <div class="col-md-8 border-right">
                    <form class="form" method="post" action='/admin/doAddGuest' id="add" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input class="form-control" type="text" name="name" placeholder="Full name"
                                        required/>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" type="text" placeholder="user@example.com" name="email"
                                        required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Date of Birth</label>
                                    <input class="form-control" type="date" name="date" required />
                                </div>
                            </div>
                            <div class="col mb-3">
                                <div class="col form-group">
                                    <label>Image</label>
                                    <input type="file" name="picture" id="picture" accept="image/*" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Address</label>
                                    <textarea class="form-control" rows="5" placeholder="Address" name="address"></textarea>
                                </div>
                            </div>
                        </div>
                        <!-- Faculty Selection Dropdown -->
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label for="faculty">Faculty</label>
                                    <select class="form-control" id="faculty" name="faculty" >
                                        <option value="" textContent="Select" selected disabled> Faculty </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-end">
                                <button class="btn btn-primary" type="submit">Save</button>
                                <a href="/admin/viewGuest" class="btn btn-warning">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/validate.js"></script>
    <script>
    window.addEventListener('DOMContentLoaded', async () => {
        try {
            const response = await fetch('/admin/getFaculties');
            const faculties = await response.json();
            console.log(faculties);

            const facultySelect = document.getElementById('faculty');

            faculties.forEach(faculty => {
                const option = document.createElement('option');
                option.value = faculty._id; // Assuming _id is the unique identifier of the faculty
                option.textContent = faculty.name; // Assuming 'name' is the field you want to display
                console.log(faculty._id, faculty.name);
                facultySelect.appendChild(option);
            });

        } catch (error) {
            console.error('Error fetching faculties:', error);
        }
    });
</script>
</body>

</html>
