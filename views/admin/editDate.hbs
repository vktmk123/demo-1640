<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> adminHeader}}

    <div class="modal-dialog modal-lg" role="document" style="margin-top: 5%; margin-left: 20%">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Editing Event </h2>
            </div>
            <div class="modal-body">
                <div class="py-1">
                    <form class="form" method="post" action='/admin/doEditEvent'>
                        <div class="row">
                            <div class="col">
                                <input type="hidden" name="id" value="{{aEvent.id}}" />
                                <div class="form-group">
                                    <label>Name</label>
                                    <input class="form-control" type="text" name="name" value="{{aEvent.name}}"
                                        disabled />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Date Start</label>
                                    <input class="form-control" type="date" name="dateStart"
                                        value="{{dateFormat aEvent.dateStart "YYYY-MM-DD"}}" />
                                </div>
                            </div>
                            <div class="col mb-3">
                                <div class="form-group">
                                    <label>Date End</label>
                                    <input class="form-control" type="date" name="dateEnd"
                                        value="{{dateFormat aEvent.dateEnd "YYYY-MM-DD"}}" />
                                </div>
                                <span class="helper-text text-danger">{{errors}}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea class="form-control" rows="5" name="description"
                                        disabled>{{aEvent.description}} </textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col d-flex justify-content-end">
                                <button class="btn btn-primary" type="submit">Save</button>
                                <a href="/admin/viewEvent" class="btn btn-warning">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>