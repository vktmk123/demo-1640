<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
    {{> adminHeader}}
    <div class="modal-dialog modal-lg" role="document" style="margin-top: 3%; margin-left: 15%">
        <div class="container py-5 modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Change Password Admin</h2>
            </div>
            <div class="modal-body">
                <div class="py-1">
                    <form class="form" method="post" action="/admin/doChangePassword">
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col mb-3">
                                        <div class="form-group">
                                            <label>Current Password</label>
                                            <input class="form-control" type="password" placeholder="••••••"
                                                name="current" required />
                                            <span class="helper-text text-danger">{{errors.current}}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col mb-3">
                                        <div class="form-group">
                                            <label>New Password</label>
                                            <input class="form-control" type="password" placeholder="••••••" name="new">
                                            <span class="helper-text text-danger">{{errors.length}}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col mb-3">
                                        <div class="form-group">
                                            <label>Confirm Password</label>
                                            <input class="form-control" type="password" placeholder="••••••" name="confirm">
                                            <span class="helper-text text-danger">{{errors.check}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-end">
                                <button class="btn btn-primary" type="submit">Save</button>
                                <a href="/admin" class="btn btn-warning">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>